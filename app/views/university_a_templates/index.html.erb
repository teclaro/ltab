<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All university as
    </h1>

    <a href="/university_as/new" class="btn btn-block btn-outline-secondary">
      Add a new university a
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "university_a_templates/university_as_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @university_as.each do |university_a| %>
      <tr>
        <td>
          <%= university_a.id %>
        </td>

        <td>
          <%= time_ago_in_words(university_a.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(university_a.updated_at) %> ago
        </td>

        <td>
          <a href="/university_as/<%= university_a.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @university_as, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
